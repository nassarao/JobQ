<!-- Modal -->
<div class="modal fade" id="JobEditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                <div class="modal-body">
                    <form id="UpdateJobForm">
                        <p>Enter the new command for this job</p>
                        @Html.TextBox("jobData", null, new { id = "jobData" })
                        @Html.Hidden("guid",null,new { id = "guid" })
                        <button type="submit" class="btn btn-primary">Save changes</button>

                    </form>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger delete">Delete Job</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
        </div>
    </div>
</div>